<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.gihub.varunj.sangoshthi_gallery">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="io.gihub.varunj.sangoshthi_gallery.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="io.gihub.varunj.sangoshthi_gallery.sync.SyncHome"/>
        <activity android:name=".gallery.GalleryHome" />
        <activity android:name=".gallery.DetailActivity"/>

    </application>

</manifest>
