<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="io.gihub.varunj.sangoshthi_gallery.Activities.ASplashScreenActivity">

    <ImageView
        android:id="@+id/imageview_splashscreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_splashscreen"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/splash_screen"
        android:textSize="25sp"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:layout_below="@+id/imageview_splashscreen"
        android:layout_centerHorizontal="true"
        android:gravity="center"/>

</RelativeLayout>
